// QN1: Sum of n natural numbers
#include<stdio.h>

int sum(n){
     if(n==0){
     return 0;     
     }
     else{
     return n + sum(n-1);     
     }

}



int main(){
     int n;
     printf("Enter Number: ");
     scanf("%d",&n);
     
     int result = sum(n);
     printf("The sum of %d natural numbers is %d", n, result);
     
     


return 0;
}
