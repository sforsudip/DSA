// QN2: Factorial

#include <stdio.h>

int fact(n){
     if(n==0){
     return 1;     
     }
     else{
     return n* fact(n-1);     
     }
}

int main(){
     int n, ans;
     printf("Enter Number: ");
     scanf("%d",&n);
     ans = fact(n);
     printf("The factorial of %d is %d",n,ans);


return 0;
}
